<div class="header">
    <div class="home-menu pure-menu pure-menu-horizontal pure-menu-fixed">
        <a class="pure-menu-heading" href="">LoL Oce Boost</a>

        <ul class="pure-menu-list">
            <li class="pure-menu-item pure-menu-selected"><a href="#" class="pure-menu-link">Home</a></li>
            <li class="pure-menu-item pure-menu-selected"><a href="#" class="pure-menu-link">Contact</a></li>
            <% if user_signed_in? %>
                <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
            <% else %>
                <li class="pure-menu-item"><a href="<%= '/users/sign_in'%>" class="pure-menu-link">Log in</a></li>
            <% end %>
        </ul>
    </div>
</div>

<div class="splash-container">
    <div class="splash">
        <label> current elo </label>
            <select id="currentelo" onchange="calc()">
                <option value="0">Bronze 5</option>
                <option value="20">Bronze 4</option>
                <option value="40">Bronze 3</option>
                <option value="60">Bronze 2</option>
                <option value="80">Bronze 1</option>
                <option value="100">Silver 5</option>
                <option value="125">Silver 4</option>
                <option value="150">Silver 3</option>
                <option value="175">Silver 2</option>
                <option value="200">Silver 1</option>
                <option value="225">Gold 5</option>
                <option value="255">Gold 4</option>
                <option value="285">Gold 3</option>
                <option value="315">Gold 2</option>
                <option value="345">Gold 1</option>
                <option value="375">Plat 5</option>
            </select>
        <br> 
        <label> current LP </label>
            <select id="currentLP" onchange="calc()">
                <option value="1">0-20</option>
                <option value="0.8">20-40</option>
                <option value="0.6">40-60</option>
                <option value="0.4">60-80</option>
                <option value="0.2">80-100</option>
            </select>
        <br>
        <label> LP per win</label>
            <select id="lpwin" onchange="calc()">
                <option value="1">+20</option>
                <option value="1.2">15-19</option>
                <option value="1.5">-15</option>
            </select>
        <br>
        <br>
        <label> desired elo </label>
            <select id="desiredelo" onchange="calc()">
                <option value="0">Bronze 5</option>
                <option value="20">Bronze 4</option>
                <option value="40">Bronze 3</option>
                <option value="60">Bronze 2</option>
                <option value="80">Bronze 1</option>
                <option value="100">Silver 5</option>
                <option value="125">Silver 4</option>
                <option value="150">Silver 3</option>
                <option value="175">Silver 2</option>
                <option value="200">Silver 1</option>
                <option value="225">Gold 5</option>
                <option value="255">Gold 4</option>
                <option value="285">Gold 3</option>
                <option value="315">Gold 2</option>
                <option value="345">Gold 1</option>
                <option value="375">Plat 5</option>
            </select>
        <div id="total"></div>
    </div>
</div>


